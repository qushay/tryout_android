<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
	<LinearLayout style="@style/TitleBar">

        <TextView style="@style/TitleBarText" 
            android:text="Registrasi"/>
    </LinearLayout>
    <TextView android:id="@+id/reg_error" 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textColor="#F00"
        android:gravity="center_horizontal"/>
   <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"  >

        <EditText android:id="@+id/reg_nama"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:hint="Nama Lengkap"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"  >

        <EditText android:id="@+id/reg_sekolah"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:hint="Asal Sekolah"/>

    </LinearLayout>
    	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp" >
        <EditText android:id="@+id/reg_user"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:hint="User"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp" >
        <EditText android:id="@+id/reg_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:hint="Email"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp" >
        <EditText android:id="@+id/reg_pass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:hint="Password"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp" >
        <EditText android:id="@+id/reg_repass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:hint="Re Password"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp" >
        <Button android:id="@+id/reg_daftar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:text="Daftar"/>
        </LinearLayout>
</LinearLayout>